#include <iostream>
#include <string>
#define MAX 10

using namespace std;

class Empleado {
private:
    string clave;
    string nombre;
    string domicilio;
    float sueldo;
    string jefe;

public:
    Empleado() : clave(""), nombre(""), domicilio(""), sueldo(0.0), jefe("") {}

    void leer() {
        cout << "Ingrese la clave: ";
        cin >> clave;
        cin.ignore();
        cout << "Ingrese el nombre: ";
        getline(cin, nombre);
        cout << "Ingrese el domicilio: ";
        getline(cin, domicilio);
        cout << "Ingrese el sueldo: ";
        cin >> sueldo;
        cin.ignore();
        cout << "Ingrese el nombre del jefe: ";
        getline(cin, jefe);
    }

    void mostrar() const {
        cout << "Clave: " << clave
             << "Nombre: " << nombre
             << "Domicilio: " << domicilio
             << "Sueldo: " << sueldo
             << "Jefe: " << jefe << endl;
    }

    string getClave() const { return clave; }

    bool operator==(const Empleado &otro) const {
        return clave == otro.clave;
    }
};


template <class T>
class ListaEstatica {
private:
    T datos[MAX];
    int tam;

public:
    ListaEstatica() : tam(0) {}

    int Vacia() { return tam == 0; }
    int Llena() { return tam == MAX; }

    int Agrega(T elem) {
        if (Llena()) return 0;
        datos[tam++] = elem;
        return 1;
    }

    int Inserta(T elem, int pos) {
        if (Llena()) return 0;
        if (pos < 0 || pos > tam) return -1;
        for (int i = tam; i > pos; i--) {
            datos[i] = datos[i - 1];
        }
        datos[pos] = elem;
        tam++;
        return 1;
    }

    int Busca(T elem) {
        if (Vacia()) return -2;
        for (int i = 0; i < tam; i++) {
            if (datos[i] == elem) return i;
        }
        return -1;
    }

    int Elimina(int pos) {
        if (Vacia()) return -2;
        if (pos < 0 || pos >= tam) return -1;
        for (int i = pos; i < tam - 1; i++) {
            datos[i] = datos[i + 1];
        }
        tam--;
        return 1;
    }

    void Muestra() {
        if (Vacia()) {
            cout << "La lista esta vacia.\n";
            return;
        }
        for (int i = 0; i < tam; i++) {
            cout << i << ") ";
            datos[i].mostrar();
        }
    }
};
int main() {
    ListaEstatica<Empleado> lista;
    int opcion;

    do {
        cout << "\n===== MENU =====\n";
        cout << "1. Agrega\n";
        cout << "2. Buscar\n";
        cout << "3. Elimina\n";
        cout << "4. Inserta\n";
        cout << "5. Muestra\n";
        cout << "6. Salir\n";
        cout << "Elige una opcion: ";
        cin >> opcion;

        switch (opcion) {
        case 1: {
            if (lista.Llena()) {
                cout << "No se puede agregar. La lista esta llena.\n";
            } else {
                Empleado e;
                e.leer();
                lista.Agrega(e);
                cout << "Empleado agregado correctamente.\n";
            }
            break;
        }

        case 2: {
            if (lista.Vacia()) {
                cout << "La lista no tiene elementos guardados aun.\n";
            } else {
                cout << "Dame la clave del empleado a buscar: ";
                Empleado e;
                string clave;
                cin >> clave;
                e = Empleado();
                *(string*)&e = clave;
                e = Empleado();
                e = Empleado();
                e.leer();
                int pos = lista.Busca(e);
                if (pos == -2)
                    cout << "La lista esta vacia.\n";
                else if (pos == -1)
                    cout << "No se encontro ningun empleado con esa clave.\n";
                else
                    cout << "Empleado encontrado en la posicion: " << pos << endl;
            }
            break;
        }

        case 3: {
            if (lista.Vacia()) {
                cout << "La lista no tiene elementos guardados aun.\n";
            } else {
                cout << "Dame la clave del empleado a eliminar: ";
                string clave;
                cin >> clave;
                Empleado e;
                e = Empleado();
                e.leer();
                int pos = lista.Busca(e);
                if (pos == -1)
                    cout << "El empleado ingresado no existe.\n";
                else if (pos >= 0) {
                    lista.Elimina(pos);
                    cout << "Empleado eliminado correctamente.\n";
                }
            }
            break;
        }

        case 4: {
            if (lista.Llena()) {
                cout << "No se pudo insertar porque la lista esta llena.\n";
            } else {
                Empleado e;
                e.leer();
                int pos;
                cout << "Dame la posicion donde se debe insertar el Empleado: ";
                cin >> pos;
                int res = lista.Inserta(e, pos);
                if (res == -1)
                    cout << "No se puede insertar en esa posicion.\n";
                else
                    cout << "Empleado insertado correctamente.\n";
            }
            break;
        }

        case 5: {
            lista.Muestra();
            break;
        }

        case 6:
            cout << "Saliendo del programa...\n";
            break;

        default:
            cout << "Opcion no valida.\n";
        }

    } while (opcion != 6);

    return 0;
}
